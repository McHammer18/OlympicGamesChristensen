@model IEnumerable<Country>
@{
    ViewData["Title"] = "Olympic Games";
    string Active(string filter, string selected){
        return (filter.ToLower() == selected.ToLower()) ? "active" : "";
    }
}

<div class="row">
    <div class="colm-3">
        <h3 class="mt-3">Games</h3>
        <div class="list-group">
            @foreach (Game game in ViewBag.Games)
            {
                <a asp-action="Index"
                   asp-route-activeGame="@game.GameId"
                   asp-route-activeCat="@ViewBag.ActiveCat"
                   class="lisst-group-item @Active(game.GameId, ViewBag.ActiveGame)">
                  @game.GameName
               </a>
            }
        </div>
        <h3 class="mt-3">Categories</h3>
        <div class="list-group">
            @foreach (Category cat in ViewBag.Categories)
            {
                <a asp-action="Index"
                   asp-route-activeGame="@ViewBag.ActiveGame"
                   asp-route-activeCat="@cat.CategoryID"
                   class="list-group-item @Active(cat.CategoryID, ViewBag.ActiveCat)">
                  @cat.CategoryName
               </a>
            }
        </div>
    </div>
    <div class="col-sm-9">
        <ul class="list-inline">
            @foreach (Country country in Model)
            {
                <li class="list-inline-item">
                    <img src="~/Flags/@country.FlagImage" alt="@country.CountryName" title="@country.CountryName |
                        @country.Game.GameName @country.Category.CategoryName" />
                </li>
            }
        </ul>
    </div>
</div>
